{
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": ["prettier"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "plugins": ["prettier"],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": ["error"]
    }
  }
  